<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.scoula.backend.domain.post.mapper.PostMapper">

    <!-- ✅ 게시글 등록 -->
    <insert id="insertPost" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO post (family_member_id, family_id, media_url, description, created_at)
        VALUES (#{familyMemberId}, #{familyId}, #{mediaUrl}, #{description}, NOW())
    </insert>

    <!-- ✅ 가족별 게시글 조회 -->
    <select id="findAllPostsByFamilyId" resultMap="PostResponseMap">
        SELECT
            p.*,
            fm.nickname AS writer_nickname,
            fm.profile_image AS writer_profile,
            (SELECT COUNT(*) FROM post_comment pc WHERE pc.post_id = p.id) AS comment_count
        FROM post p
                 JOIN family_member fm ON p.family_member_id = fm.id
        WHERE p.family_id = #{familyId}
        ORDER BY p.created_at DESC
    </select>

    <resultMap id="PostResponseMap" type="org.scoula.backend.domain.post.dto.PostResponse">
        <id property="id" column="id"/>
        <result property="familyMemberId" column="family_member_id"/>
        <result property="familyId" column="family_id"/>
        <result property="mediaUrl" column="media_url"/>
        <result property="description" column="description"/>
        <result property="createdAt" column="created_at"/>

        <!-- 추가된 항목 -->
        <result property="writerNickname" column="writer_nickname"/>
        <result property="writerProfile" column="writer_profile"/>
        <result property="commentCount" column="comment_count"/>
    </resultMap>

    <!-- ✅ 게시글 수정 -->
    <update id="updatePost">
        UPDATE post
        SET description = #{description}
        WHERE id = #{id}
          AND family_member_id = #{familyMemberId}
    </update>


    <!-- ✅ 게시글 삭제 -->
    <delete id="deletePost">
        DELETE FROM post
        WHERE id = #{id}
          AND family_member_id = #{familyMemberId}
    </delete>

    <!-- ✅ 컬럼 ↔ 필드 매핑 -->
    <resultMap id="PostResultMap" type="org.scoula.backend.domain.post.domain.Post">
        <id property="id" column="id"/>
        <result property="familyMemberId" column="family_member_id"/>
        <result property="familyId" column="family_id"/>
        <result property="mediaUrl" column="media_url"/>
        <result property="description" column="description"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <insert id="insertPostMedia">
        INSERT INTO post_media (post_id, media_url)
        VALUES (#{postId}, #{mediaUrl})
    </insert>

    <select id="findMediaByPostId" resultType="string">
        SELECT media_url
        FROM post_media
        WHERE post_id = #{postId}
    </select>

    <select id="findPostsByMemberId" resultType="org.scoula.backend.domain.post.dto.PostResponse">
        SELECT
            p.id,
            p.family_id,
            p.family_member_id,
            p.description,
            p.created_at
        FROM post p
        WHERE p.family_member_id = #{memberId}
        ORDER BY p.created_at DESC
    </select>

    <select id="findAllPostImages" resultType="string">
        SELECT media_url
        FROM post_media
        WHERE media_url LIKE '%post-images/%';
    </select>

    <!-- post_media 삭제 -->
    <delete id="deletePostMediaByPostId">
        DELETE FROM post_media WHERE post_id = #{postId};
    </delete>

    <!-- pet_media 삭제 -->
    <delete id="deletePetMediaByPostId">
        DELETE FROM pet_media WHERE post_id = #{postId};
    </delete>



</mapper>
